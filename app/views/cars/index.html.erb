<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Owner Name</th>
      <th>Owner Profile Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td><%= car.price %></td>
        <td><%= car.user.first_name%> <%= car.user.last_name%></td>
        <td><img src="<%= car.user.profile_photo.url %>" alt="<%= car.user.profile_photo.url %>" border=3 height=100 width=200></img></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path %>
